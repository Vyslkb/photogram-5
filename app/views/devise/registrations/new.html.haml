.registration-bg
  .container
    .row
      .col-md-4.col-md-offset-4
        .log-in.panel
          .panel-heading
            %h2 Yeni Üye Kayıt
          = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
            = f.error_notification
            .panel-body
              = f.input :email, required: true, autofocus: true, label: false, placeholder: 'Email Adresiniz', input_html: { class: 'input-lg' }
              = f.input :user_name, required: true, label: false, placeholder: 'Kullanıcı Adınız', input_html: { class: 'input-lg' }
              = f.input :password, required: true, label: false, placeholder: 'Şifreniz', input_html: { class: 'input-lg' }
              = f.input :password_confirmation, required: true, label: false, placeholder: 'Şifre Tekrarı', input_html: { class: 'input-lg' }
              = f.button :submit, "Kayıt Ol", class: 'btn-lg btn-info btn-block'
